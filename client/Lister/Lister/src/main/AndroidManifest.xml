<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.dxtr.lister" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label=""
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.dxtr.lister.MainActivity"
            android:label="" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.dxtr.lister.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:parentActivityName="se.dxtr.lister.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>

        <activity
            android:name="se.dxtr.lister.ListOverviewActivity"
            android:label="@string/title_activity_list_overview" >
        </activity>

        <activity
            android:name="se.dxtr.lister.ListDetailsActivity"
            android:label="@string/title_activity_list_details" >
        </activity>
        <activity
            android:name="se.dxtr.lister.ManageCollaboratorsActivity"
            android:label="@string/title_activity_manage_collaborators" >
        </activity>
    </application>

</manifest>
